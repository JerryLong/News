<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="120dp"
                  android:id="@+id/layout_one"
                  android:visibility="gone"
                  android:orientation="vertical">
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/news_listview_txt_imagetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sss"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"/>
            <TextView android:id="@+id/news_listview_txt_imagereply"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="sssssss"
                      android:layout_margin="5dp"
                      android:textColor="@color/darker_gray"
                      android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="90dp">
            <ImageView android:id="@+id/news_listview_txt_imageone"
                       android:layout_width="100dp"
                       android:scaleType="centerCrop"
                       android:layout_margin="5dp"
                       android:layout_height="80dp"
                       android:layout_weight="1"
                       android:src="@drawable/base_list_default_icon"/>

            <ImageView android:id="@+id/news_listview_txt_imagetwo"
                       android:layout_width="100dp"
                       android:scaleType="centerCrop"
                       android:layout_margin="5dp"
                       android:layout_height="80dp"
                       android:layout_weight="1"
                       android:src="@drawable/base_list_default_icon"/>

            <ImageView android:id="@+id/news_listview_txt_imagethree"
                       android:layout_width="100dp"
                       android:scaleType="centerCrop"
                       android:layout_margin="5dp"
                       android:layout_height="80dp"
                       android:layout_weight="1"
                       android:src="@drawable/base_list_default_icon"/>

        </LinearLayout>
    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:visibility="gone"
                    android:id="@+id/layout_two"
            >
        <TextView
                android:id="@+id/news_listview_one_image_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sss"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:textColor="@color/black"/>
        <ImageView android:id="@+id/news_listview_one_image"
                   android:layout_width="match_parent"
                   android:layout_height="150dp"
                   android:layout_below="@id/news_listview_one_image_title"
                   android:layout_margin="5dp"
                   android:scaleType="centerCrop"
                   android:src="@drawable/base_list_default_icon"
                />
        <TextView android:id="@+id/news_listview_one_image_digest"
                  android:layout_below="@id/news_listview_one_image"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingEnd="10dp"
                  android:textColor="@color/darker_gray"
                  android:text="sssssss"/>
        <TextView android:id="@+id/news_listview_one_image_reply"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="sssssss"
                  android:textColor="@color/darker_gray"
                  android:paddingEnd="5dp"
                  android:layout_alignParentBottom="true"
                  android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</RelativeLayout>